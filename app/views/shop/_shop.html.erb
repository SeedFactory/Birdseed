<% @body_class = 'birdseed-header-inverse' %>
<div class="shop-banner">
  <h1>Shop</h1>
</div>
<div class="shop-nav">
  <%= active_link_to 'Specials', app_url_helpers.shop_path, class: 'shop-nav-filter', active: :exclusive %>
  <%= active_link_to 'Brands', app_url_helpers.shop_brands_path, class: 'shop-nav-filter' %>
  <%= active_link_to 'Birds', app_url_helpers.shop_birds_path, class: 'shop-nav-filter' %>
  <%= active_link_to 'Search', app_url_helpers.shop_search_path, class: 'shop-nav-filter' %>
  <%= active_link_to app_url_helpers.shop_cart_path, class: 'shop-nav-cart' do %>
    <span class="shop-nav-cart-icon glyphicon glyphicon-shopping-cart"></span>
    <% if simple_current_order.item_count > 0 %>
      <span class="shop-nav-cart-count">
        <%= simple_current_order.item_count %>
      </span>
    <% end %>
    View Cart
  <% end %>
</div>
<div class="shop-products">
  <div class="shop-nav-filters">
    <%= yield %>
  </div>
  <% if @products %>
    <% if @products.any? %>
      <div class="shop-products-list">
        <% @products.each do |product| %>
          <%= link_to product, class: 'shop-product' do %>
            <%= product_image(product) %>
            <div class="shop-product-name">
              <%= truncate(product.name, length: 50) %>
            </div>
            <div class="shop-product-price">
              <%= display_price(product) %>
            </div>
          <% end %>
        <% end %>
      </div>
    <% else %>
      <div class="shop-products-empty">
        No products found
      </div>
    <% end %>
  <% end %>
</div>
