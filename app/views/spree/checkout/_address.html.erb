<%= fb_track 'InitiateCheckout', fb_track_params(@order) %>
<div class="checkout-address">
  <div class="row">
    <div class="col-md-6 col-sm-6 checkout-address-type">
      <h1>Billing</h1>
      <%= form.fields_for :bill_address do |bill_form| %>
        <%= render 'spree/checkout/address/form', form: bill_form %>
      <% end %>
    </div>
    <div class="col-md-6 col-sm-6 checkout-address-type">
      <h1>Shipping</h1>
      <%= form.fields_for :ship_address do |ship_form| %>
        <label class="checkout-address-use-billing-label">
          <%= check_box_tag 'order[use_billing]', '1', @order.shipping_eq_billing_address?, class: 'checkout-address-use-billing' %>
          Shipping same as billing address?
        </label>
        <div class="checkout-address-shipping-fields">
          <%= render 'spree/checkout/address/form', form: ship_form %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="checkout-actions">
    <% if spree_current_user %>
      <label>
        <%= check_box_tag 'save_user_address', '1', true %>
        Save Addresses?
      </label>
    <% end %>
    <%= submit_tag 'Continue' %>
  </div>
</div>
